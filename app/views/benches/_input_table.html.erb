<h3><%= @current_benches_game.game.name %></h3>
<% if @current_benches_game.inputs.any? %>
  <table class="table table-bordered">
    <thead>
      <th>Color</th>
      <th>Type</th>
      <th>Min</th>
      <th>Max</th>
      <th>Avg</th>
      <th>Total</th>
      <th>Tools</th>
    </thead>
    <tbody>
      <% @current_benches_game.variations.each do |type| %>
          <% inputs = type.inputs %>
          <tr>
            <td style="background-color: <%= type.color %>;"></td>
            <td><%= type.name %></td>
            <td><%#= inputs.minimum(:fps).to_i %></td>
            <td><%#= inputs.maximum(:fps).to_i %></td>
            <td><%#= inputs.average(:fps).to_i %></td>
            <td><%= inputs.count %></td>
            <td><%= link_to 'Destroy All', delete_inputs_bench_path(@benchmark, :type => type.id, :benches_game_id => @current_benches_game.id), class: 'btn btn-danger', remote: true %>
            <%= link_to 'Destroy First', delete_first_input_bench_path(@benchmark, :type => type.id, :benches_game_id => @current_benches_game.id), class: 'btn btn-info', remote: true %>
            <%= link_to 'Destroy Last', delete_last_input_bench_path(@benchmark, :type => type.id, :benches_game_id => @current_benches_game.id), class: 'btn btn-warning', remote: true %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>

